<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:match="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@android:color/black"
                tools:context=".MainActivity">

    <com.roger.match.library.MatchTextView
        android:id="@+id/MatchTextView"
        match:text="qI PEI PU"
        match:textSize="20sp"
        match:textColor="#ffffff"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <SeekBar
        android:max="100"
        android:layout_below="@+id/MatchTextView"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/SeekBar"
        android:layout_height="wrap_content" />

    <com.roger.match.library.MatchButton
        android:id="@+id/MathchButton"
        match:text="NO"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.roger.match.library.MatchTextView
        android:layout_below="@id/MathchButton"
        android:id="@+id/MatchTextViewCopy"
        match:text="qI PEI PU"
        match:textSize="20sp"
        match:textColor="#ffffff"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
